#include<stdio.h>
void main()
{
    int a;
    printf("enter a num");
    scanf("%d",&a);
    if(a==0)
    {
       printf("number is neither positive nor negative");
    }
    else if(a>0)
    {
         printf("the number is positve");
    }
    else
    {
          printf("the number is negative");
    }
}    
